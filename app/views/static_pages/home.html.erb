<div class="intro-header">
    <div class="intro-header__overlay"></div>
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <div class="intro__makenew">makenew</div>
                    <div class="intro__subtitle">Christmas Challenge</div>
                    <div class="stats">
                        <div class="stat stat--with-bg">
                            <h3><%= @winner[0] %></h3>
                            <div class="stat__count"><%= @winner[1] %></div>
                            <div class="stat__label">Points</div>
                        </div>

                        <% @points.each do |team| %>
                            <div class="stat stat--with-bg">
                                <h3><%= team[0] %></h3>
                                <div class="stat__count"><%= team[1] %></div>
                                <div class="stat__label">Points</div>
                            </div>
                        <% end %>
                    </div>
                    <a href="" class="btn btn-primary btn-lg">Log a challenge</a>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.intro-header -->

<!-- Page Content -->

<div class="content-section-a">

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-heading" style="text-align:center">The Challenge</h2>
                <p style="text-align:center">This winter break, let's stir up one another to love and good works with some friendly competition! Complete various 'Christmas Challenges' to grow, serve others, and equip yourself, and compete with teams along the way!</p>
            </div>
            <div class="col-lg-6">
                <div class="clearfix"></div>
                <h2 class="section-heading">Rules</h2>
                <ul>
                    <li>
                        Challenge starts 12/7/18 and ends 1/7/19.
                    </li>
                	<li>
                		Completed a challenge? Great! Make your points count by logging it on this website!
                	</li>
                    <li>
                        Upload a photo or video, if possible!
                    </li>
                    <li>
                        All memorization challenges will be checked by Andy at the end of the challenge.
                    </li>
                </ul>
            </div>
            <div class="col-lg-6">
                <div class="clearfix"></div>
                <h2 class="section-heading">Prizes</h2>
                <ul>
                    <li>
                        The winning team gets a special, limited edition MakeNew shirt! (To qualify for this, you must complete challenges from 3 out of 4 categories, with a total of at least 250 points.)
                    </li>
                    <li>
                        You can also receive this prize by completing the <%=link_to 'Memorize 100 Verses', verses_path %> challenge.
                    </li>
                    <li>
                        The student with the most points overall (minimum 500 points, with a complete challenge from every category) gets a <b>free trip to Winter Retreat!!!</b>
                    </li>
                </ul>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.content-section-a -->

<div class="content-section-b">
    <div class="container">
        <div class="row">
            <hr class="section-heading-spacer-left">
            <div class="clearfix"></div>
            <h2>Log Completed Challenge</h3>

        </div>

        <div class="row">
            <div class="col-lg-12">
                <%= form_for @comment, :html => {:role => 'form'} do |f| %>

                    <div class="col-lg-6">
                        <%= render 'shared/error_messages' %>
                        <div class="form-group">
                            <%= f.label :name, "Name (first and last)" %>
                            <%= f.text_field :name, { :class => "form-control"} %>
                        </div>

                        <div class="form-group">
                            <%= f.label :team %>
                            <%= f.select :team, options_for_select(["Bros", "Sis", "Staff"]), {:prompt => 'Select Team'}, { :class => "form-control" } %>
                        </div>
                        <div class="form-group">
                            <%= f.label :content, "Blurb" %>
                            <%= f.text_area :content, { :class => "form-control", rows: "5"} %>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group">
                            <%= f.label :mission_id, "Challenge" %>

                            <select class="form-control" name="comment[mission_id]" id="comment_mission_id">
                                <option value>Select Challenge</option>
                                <optgroup label="Spiritual Growth">Spiritual Growth
                                    <% @sg.each do |mission| %>
                                    <option value=<%= mission.id %>><%= mission.name %> - <%= mission.points%> points</option>
                                    <% end %>
                                </optgroup>
                                <optgroup label="Evangelism">Evangelism
                                    <% @evangelism.each do |mission| %>
                                    <option value=<%= mission.id %>><%= mission.name %> - <%= mission.points%> points</option>
                                    <% end %>
                                </optgroup>
                                <optgroup label="Service/Gratitude">Service/Gratitude
                                    <% @ser.each do |mission| %>
                                    <option value=<%= mission.id %>><%= mission.name %> - <%= mission.points%> points</option>
                                    <% end %>
                                </optgroup>
                                <optgroup label="Equipping">Equipping
                                    <% @eq.each do |mission| %>
                                    <option value=<%= mission.id %>><%= mission.name %> - <%= mission.points%> points</option>
                                    <% end %>
                                </optgroup>
                            </select>
                        </div>

                        <div class="form-group">
                            <%= f.label :avatar, "Upload a Picture (optional, but recommended)" %>
                            <%= f.file_field :avatar, { :class => "form-control"} %>
                        </div>

                        <div class="form-group">
                            <%= f.label :video, "Upload a Video (optional)" %>
                            <%= f.file_field :video, { :class => "form-control"} %>
                        </div>
                    </div>

                    <%= f.submit "Submit my post", class: "btn btn-primary btn-lg btn-block" %>
                <% end %>
            </div>
        </div>
    </div>  
</div>
