<script>
    $(document).ready(function() { $("#user_campus").select2(); });
 </script> 

<div class="Container">
  <h1>Create your account</h1>

  <%= simple_form_for(@user, url: profile_path, :method => :update) do |f| %>
    <%= f.input :name, :label => 'Name', input_html: {value: @user_name} %>
    <%= f.input :campus, collection: @campus_names, :label => 'Campus', selected: @user_campus%>
    <%= f.input :gender, collection: ["Male", "Female"], :label => "Gender", selected: @user_gender%>
    <%= f.input :staff, :label => "Staff", :value => @user_staff%>
    <%= f.button :submit,  data: { disable_with: false }, class: 'Button' %>
  <% end -%>
</div>