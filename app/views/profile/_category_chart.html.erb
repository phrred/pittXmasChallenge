
<canvas id="categoryChart" width="400" height="200"></canvas>

<script>
var comparisonChart = new Chart(document.getElementById("categoryChart"), {
    type: 'pie',
    data: {
      datasets: [{
        data: <%=[@sg_points, @evangelism_points, @ser_points, @eq_points, @thanksgiving_points] %>,
        backgroundColor: [
            "#191970",
            "#291970",
            "#391970",
            "#491970",
            "#691970",
          ],
      }],
      labels: ["Spiritual Growth", "Evangelism", "Service/Gratitude", "Equipping", "Thanksgiving Challenge"],
    },
    options: {
      legend: { display: true },
      title: {
        display: true,
        text: "Points Per Category"
      }
    }
});
</script>
